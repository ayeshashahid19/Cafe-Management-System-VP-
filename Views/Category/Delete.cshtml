@model CafeManagementSystem.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠️ Delete Category</h4>
        </div>

        <div class="card-body">
            <p class="fs-5">Are you sure you want to delete this category?</p>

            <div class="alert alert-warning">
                <strong>@Model.CategoryName</strong>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CategoryId" />

                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
